<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Welcome To YOMARK...</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .changecolor {
           background-color:lightsteelblue;
           // color:indianred;
        }
        .changecolor:hover{
            
          //color:darkviolet
        }
        </style>
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark box-shadow mb-3">
           
            <div class="container">
                <div class="navbar-header">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">

                       
                    </button>
                    

                    </div>
                <div class="navbar-collapse collapse changecolor">
                    <ul class="navbar-nav">


                        <li class="nav-item ">
                            <a class="nav-link text-white font-weight-bold">About Us</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white font-weight-bold">Resources</a>
                            
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white font-weight-bold">Products</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white font-weight-bold">Clients</a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white font-weight-bold">Contact</a>

                        </li>
                     </ul>

                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="btn text-white font-weight-bold">Sign Up </a>
                                <a class="btn text-white font-weight-bold">Login </a>
                            </li>
                          
                            
                        </ul>
                    </div>

                </div>
                </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - WelcomePage - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>