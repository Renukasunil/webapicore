@page "/admin/login"
@using LMS.Model

<div class="container">
<h2>Admin Login Form</h2>

    <label for="uname">
        <b>Username</b>
    </label>
    <input type="text"  placeholder="Enter Username" name="uname" required>
    <label for="psw">
        <b>Password</b>
    </label>
        <input type="password" placeholder="Enter Password" name="psw" required>
    <div style="padding: 12px 0px;">
    </div>
    <button class="btn btn-primary" @onclick="CallAdminLogin" >Login</button>  
  </div>
@code {

string UserId =string.Empty;
string Password =string.Empty;

private async  void CallAdminLogin()
{

 HttpClient  clnt = new  HttpClient();
 AdminLogin adminlogin = new AdminLogin();
 
 adminlogin.UserId= UserId;
 adminlogin.Password= Password;

 var response = await  clnt.PostAsJsonAsync("http://localhost:5010/api/Admin/GetAdminLogin",adminlogin);
 Console.WriteLine(response);
 EventInfo obj=  await response.Content.ReadFromJsonAsync<EventInfo>();
     
 
}
}
